<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="oval"  >
             
             <stroke android:width="1dip" android:color="#c53e2b" />
             <gradient  android:angle="-90"  android:endColor="#a11005" android:startColor="#d62608"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="oval"  >
         
             <stroke android:width="1dip" android:color="#c53e2b" />
             <solid  android:color="#e0341e"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="oval"  >
             
             <stroke android:width="3dip" android:color="#c53e2b" />
             <gradient  android:angle="-90"  android:endColor="#ff6c52" android:startColor="#e0341e" />            
         </shape>
     </item>
</selector>