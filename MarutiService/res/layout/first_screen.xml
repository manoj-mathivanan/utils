<?xml version="1.0" encoding="utf-8"?>

 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1buy_new"
        android:layout_width="match_parent"
            android:background="@drawable/back"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
            android:id="@+id/mywidget1first_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            android:text="This app is owned and operated by SRI ANANTH MARUTHI PVT LTD., Leading Sales and Service dealers of aircondtioners and cooling equipments and energy saving products."
            android:textColor="#ffffff" />
     
        <RelativeLayout
            android:id="@+id/RelativeLayout1buy_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:orientation="vertical" >
    
    <Button
        android:id="@+id/buynewbutton"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:gravity="left|center_vertical"
        android:onClick="buy_screen"
        android:text="Buy new products" />

    <Button
        android:id="@+id/buynewbutton2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/buynewbutton"
        android:layout_alignRight="@+id/buynewbutton"
        android:layout_alignTop="@+id/buynewbutton"
        android:layout_margin="5dp"
        android:onClick="buy_screen"
        android:text=">" />

    <Button
        android:id="@+id/sellitems"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buynewbutton"
        android:gravity="left|center_vertical"
        android:onClick="sell_screen"
        android:text="Sell my items" />

    <Button
        android:id="@+id/sellitems2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/sellitems"
        android:layout_alignRight="@+id/sellitems"
        android:layout_alignTop="@+id/sellitems"
        android:layout_margin="5dp"
        android:onClick="sell_screen"
        android:text=">" />
    
    
    <Button
        android:id="@+id/callservice"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sellitems"
        android:gravity="left|center_vertical"
        android:onClick="service_screen"
        android:text="Call for service" />

    <Button
        android:id="@+id/callservice2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/callservice"
        android:layout_alignRight="@+id/callservice"
        android:layout_alignTop="@+id/callservice"
        android:layout_margin="5dp"
        android:onClick="service_screen"
        android:text=">" />
    
    
    <Button
        android:id="@+id/optamc"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/callservice"
        android:gravity="left|center_vertical"
        android:onClick="opt_amc"
        android:text="Opt for AMC" />

    <Button
        android:id="@+id/optamc2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/optamc"
        android:layout_alignRight="@+id/optamc"
        android:layout_alignTop="@+id/optamc"
        android:layout_margin="5dp"
        android:onClick="opt_amc"
        android:text=">" />
    
    <Button
        android:id="@+id/relocate"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/optamc"
        android:gravity="left|center_vertical"
        android:onClick="relocate_ac"
        android:text="Relocate AC" />

    <Button
        android:id="@+id/relocate2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/relocate"
        android:layout_alignRight="@+id/relocate"
        android:layout_alignTop="@+id/relocate"
        android:layout_margin="5dp"
        android:onClick="relocate_ac"
        android:text=">" />
    
    <Button
        android:id="@+id/others"
        style="@style/btnstyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relocate"
        android:gravity="left|center_vertical"
        android:onClick="others_call"
        android:text="Others" />

    <Button
        android:id="@+id/others2"
        style="@style/btnstyle2"
        android:layout_alignBottom="@+id/others"
        android:layout_alignRight="@+id/others"
        android:layout_alignTop="@+id/others"
        android:layout_margin="5dp"
        android:onClick="others_call"
        android:text=">" />

      

</RelativeLayout>

        <TextView
            android:id="@+id/mywidget2buy_new"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The services associated with this app are at present available only with in city of chennai and suburbs. Intimation regarding other cities to be covered will be given as and when they become operational"
            android:textColor="#ffffff" />
        
        </LinearLayout>

</ScrollView>
